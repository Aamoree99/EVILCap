<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pilot Statistics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1a1a1a;
            color: #f0ad4e;
        }
        .table {
            background-color: #1a1a1a;
            color: #f0ad4e;
        }
        .table th, .table td {
            border: 1px solid #555555;
            padding: 8px;
        }
        .table th {
            background-color: #333333;
            color: #f0ad4e;
        }
        .table td {
            background-color: #1a1a1a;
        }
        .btn {
            background-color: #ffc107;
            color: #1a1a1a;
            border: 2px solid #ffc107;
            border-radius: 0;
            margin-bottom: 10px;
        }
        .btn:hover {
            background-color: #ffb000;
            border-color: #ffb000;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Pilot Statistics</h1>
        <a href="/moon" class="btn btn-warning">Home</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Pilot Name</th>
                    <th>Total Earned (ISK) NOT CORRECT</th>
                    <th>Total Quantity (units)</th>
                    <th>Total Volume (mÂ³)</th>
                </tr>
            </thead>
            <tbody>
                <% pilotStats.forEach(pilot => { %>
                    <tr>
                        <td><%= pilot.pilot_name %></td>
                        <td><%= pilot.total_earned ? pilot.total_earned.toLocaleString('en-US', { style: 'currency', currency: 'ISK', minimumFractionDigits: 2 }).replace('ISK', '') : 'N/A' %> ISK</td>
                        <td><%= pilot.total_quantity %></td>
                        <td><%= pilot.total_volume %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
